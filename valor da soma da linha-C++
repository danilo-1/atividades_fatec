#include <iostream>
using namespace std;

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char** argv) {
	
	int soma[3];
	int i,j;
	int matriz [3][5];
	
	for(i=0;i <3;i++){
	
	cout<<"digite os valores para integrar nas matrizes: "<<endl;
		for(j=0;j<5;j++){
		
		cin>>matriz [i][j];
		soma[i] = soma[i] + matriz [i][j];
		}
		
	}
	for(i=0;i<3;i++){
			cout<<"valor da soma da linha: "<<soma[i]<<endl;
		soma[i]=0;	
		}
	
	
	return 0;
}
