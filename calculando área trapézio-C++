#include <iostream>
using namespace std;

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char** argv) {
	int A,a,b,c;
	
	cout<<"Digite a base maior e a base menor nesta ordem e a altura "<<endl;
	cin>>A>>a>>b;
	
	c = ((A*a)/2)*b;
	
	cout<<"a area do trapezio e "<<c<<"cm quadrados"<<endl;
	return 0;
}
