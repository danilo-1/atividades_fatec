#include <iostream>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */
using namespace std;
int main(int argc, char** argv) {
    cout<<"Popule a matriz 4x4 \n";
     float matriz[4][4];
     int soma = 0;
    for(int a=0; a<4; a++){
        for(int b=0; b<4; b++){
            cin>>matriz[a][b];
            if(a==b){
                soma += matriz[a][b];
            }
        }
    }
    cout<<"Soma da diagonal principal = "<<soma;
    return 0;
}
